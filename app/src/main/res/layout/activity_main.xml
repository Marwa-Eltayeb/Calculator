<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical"
    tools:context="com.marwa.Eltayeb.calculator.MainActivity">

    <LinearLayout
        android:id="@+id/linearLayoutOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_corner"
        android:orientation="vertical">

        <EditText
            android:id="@+id/showOperation"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@null"
            android:inputType="number"
            android:maxLength="10"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/testSizeForScreen" />

        <TextView
            android:id="@+id/displayResult"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:textSize="@dimen/testSizeForScreen" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <Button
            android:id="@+id/btnClear"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/button1"
            android:onClick="clear"
            android:text="@string/c"
            android:textColor="@color/white"
            android:textSize="@dimen/testSize" />

        <Button
            android:id="@+id/btnDiv"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/button2"
            android:onClick="divide"
            android:text="@string/divide"
            android:textColor="@color/white"
            android:textSize="@dimen/testSize" />

        <Button
            android:id="@+id/btnMul"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/button2"
            android:onClick="multiply"
            android:text="@string/x"
            android:textColor="@color/white"
            android:textSize="@dimen/testSize" />

        <Button
            android:id="@+id/btnBS"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/button2"
            android:onClick="backSpace"
            android:text="@string/bs"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/testSize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <Button
            android:id="@+id/btn7"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/button3"
            android:onClick="seven"
            android:text="@string/_7"
            android:textColor="#000"
            android:textSize="@dimen/testSize" />

        <Button
            android:id="@+id/btn8"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/button3"
            android:onClick="eight"
            android:text="@string/_8"
            android:textColor="#000"
            android:textSize="@dimen/testSize" />

        <Button
            android:id="@+id/btn9"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/button3"
            android:onClick="nine"
            android:text="@string/_9"
            android:textColor="@color/black"
            android:textSize="@dimen/testSize" />

        <Button
            android:id="@+id/btnSub"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/button2"
            android:onClick="subtract"
            android:text="@string/sub"
            android:textColor="@color/white"
            android:textSize="@dimen/testSize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <Button
            android:id="@+id/btn4"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/button3"
            android:onClick="four"
            android:text="@string/_4"
            android:textColor="@color/black"
            android:textSize="@dimen/testSize" />

        <Button
            android:id="@+id/btn5"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/button3"
            android:onClick="five"
            android:text="@string/_5"
            android:textColor="@color/black"
            android:textSize="@dimen/testSize" />

        <Button
            android:id="@+id/btn6"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/button3"
            android:onClick="six"
            android:text="@string/_6"
            android:textColor="@color/black"
            android:textSize="@dimen/testSize" />

        <Button
            android:id="@+id/btnAdd"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/button2"
            android:onClick="add"
            android:text="@string/plus"
            android:textColor="@color/white"
            android:textSize="@dimen/testSize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <Button
            android:id="@+id/btn1"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/button3"
            android:onClick="one"
            android:text="@string/_1"
            android:textColor="@color/black"
            android:textSize="@dimen/testSize" />

        <Button
            android:id="@+id/btn2"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/button3"
            android:onClick="two"
            android:text="@string/_2"
            android:textColor="@color/black"
            android:textSize="@dimen/testSize" />

        <Button
            android:id="@+id/btn3"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="@drawable/button3"
            android:onClick="three"
            android:text="@string/_3"
            android:textColor="@color/black"
            android:textSize="@dimen/testSize" />

        <Button
            android:id="@+id/btnPerc"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/button2"
            android:onClick="percent"
            android:text="@string/remaining"
            android:textColor="@color/white"
            android:textSize="@dimen/testSize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <Button
            android:id="@+id/brnZero"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/button3"
            android:onClick="zero"
            android:text="@string/_0"
            android:textColor="@color/black"
            android:textSize="@dimen/testSize" />

        <Button
            android:id="@+id/btnDot"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/button3"
            android:onClick="dot"
            android:text="@string/point"
            android:textColor="@color/black"
            android:textSize="@dimen/testSize" />

        <Button
            android:id="@+id/btnNegative"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/button3"
            android:onClick="positiveAndNegative"
            android:text="@string/pos_neg"
            android:textColor="@color/black"
            android:textSize="@dimen/testSize" />

        <Button
            android:id="@+id/btnEquals"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/button1"
            android:onClick="equals"
            android:text="@string/equals"
            android:textColor="@color/white"
            android:textSize="@dimen/testSize" />
    </LinearLayout>
</LinearLayout>


